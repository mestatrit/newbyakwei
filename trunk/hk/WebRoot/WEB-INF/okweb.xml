<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/classes/applicationContext.xml</param-value>
	</context-param>
	<listener>
		<listener-class>com.hk.web.pub.listener.InitListener</listener-class>
	</listener>
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>HttpWrapperFilter</filter-name>
		<filter-class>com.hk.frame.web.action.HttpWrapperFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
	<!-- 包装request response -->
	<filter-mapping>
		<filter-name>HttpWrapperFilter</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>WebSetFilter</filter-name>
		<filter-class>com.hk.web.pub.filter.WebSetFilter</filter-class>
	</filter>
	<!-- 包装api请求 -->
	<filter>
		<filter-name>ApiFilter</filter-name>
		<filter-class>com.hk.api.filter.ApiFilter</filter-class>
	</filter>
	<!-- 禁止非法用户登录 -->
	<filter>
		<filter-name>BlackUserFilter</filter-name>
		<filter-class>com.hk.web.user.filter.BlackUserFilter</filter-class>
	</filter>
	<!-- 验证是否可以发布和管理宝箱 -->
	<filter>
		<filter-name>OpBoxFilter</filter-name>
		<filter-class>com.hk.web.box.filter.OpBoxFilter</filter-class>
	</filter>
	<filter>
		<display-name>loginuser</display-name>
		<filter-name>loginuser</filter-name>
		<filter-class>com.hk.web.pub.filter.LoginUserFilter</filter-class>
		<init-param>
			<param-name>login_conf</param-name>
			<param-value>/user/set/,/user/log/,/msg/,/box/,/invite/,/notice/,/feed/,/adminbomb/,/bomb/,/card/,/chgcard/</param-value>
		</init-param>
		<init-param>
			<param-name>admin_conf</param-name>
			<param-value>/admin/,/box/admin/,/e/admin/,/info/admin/</param-value>
		</init-param>
		<init-param>
			<param-name>opcmp_conf</param-name>
			<param-value>/e/op/</param-value>
		</init-param>
		<init-param>
			<param-name>opauthcmp_conf</param-name>
			<param-value>/e/op/product/,/e/op/cmpproductphoto/,/e/op/cmpwatch/,/e/op/auth/,/e/op/tml/,/e/op/authcmp/</param-value>
		</init-param>
	</filter>
	<!-- 验证用户是否可以管理活动 -->
	<filter>
		<display-name>OpActFilter</display-name>
		<filter-name>OpActFilter</filter-name>
		<filter-class>com.hk.web.act.filter.OpActFilter</filter-class>
	</filter>
	<!-- 验证用户是否可以管理足迹 -->
	<filter>
		<display-name>CmpOpFilter</display-name>
		<filter-name>CmpOpFilter</filter-name>
		<filter-class>com.hk.web.company.filter.CmpOpFilter</filter-class>
	</filter>
	<!-- 验证联盟管理员身份 -->
	<filter>
		<filter-name>OpCmpUnionFilter</filter-name>
		<filter-class>com.hk.web.cmpunion.filter.OpCmpUnionFilter</filter-class>
	</filter>
	<!-- 验证域名是否合法 -->
	<filter>
		<filter-name>SysUnionFilter</filter-name>
		<filter-class>com.hk.web.cmpunion.filter.SysUnionFilter</filter-class>
	</filter>
	<!-- epp filter -->
	<filter>
		<filter-name>SysFilter</filter-name>
		<filter-class>web.pub.filter.SysFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>WebSetFilter</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>ApiFilter</filter-name>
		<url-pattern>/pubapi/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>loginuser</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>OpActFilter</filter-name>
		<url-pattern>/act/op/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>OpBoxFilter</filter-name>
		<url-pattern>/box/op/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>OpCmpUnionFilter</filter-name>
		<url-pattern>/cmpunion/op/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>SysFilter</filter-name>
		<url-pattern>/epp/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>SysUnionFilter</filter-name>
		<url-pattern>/union/*</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>velocityinit</servlet-name>
		<servlet-class>com.hk.frame.web.servlet.VelocityInitServlet</servlet-class>
		<load-on-startup>0</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>action</servlet-name>
		<servlet-class>com.hk.frame.web.action.ActionCtrl</servlet-class>
		<init-param>
			<param-name>debug</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>url-extension</param-name>
			<param-value>.do</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>action</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	<error-page>
		<error-code>500</error-code>
		<location>/WEB-INF/page/500.jsp</location>
	</error-page>
</web-app>